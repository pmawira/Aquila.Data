@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<div class="page-actions">
    <a asp-action="Create" class="btn-primary">+ Add Order</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (!Model.Any())
{
    <p class="empty-state">No orders have been added yet.</p>
}
else
{
    <table class="data-table">
        <thead>
            <tr>
                <th>Order Id</th>
                <th>Customer Name</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CustomerName</td>
                <td>@order.Amount</td>

            </tr>
        }
        </tbody>
    </table>
}

