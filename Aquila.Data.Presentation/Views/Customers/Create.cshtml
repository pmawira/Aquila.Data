@model CustomerViewModel

@{
    ViewData["Title"] = "Add Customer";
}

<h2>Add Customer</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>Unable to save customer</strong>
        @Html.ValidationSummary()
    </div>
}

<form method="post" class="form-card">
    <div class="form-group">
        <label asp-for="Id">Customer ID</label>
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control", placeholder = "e.g. 1" })
        @Html.ValidationMessageFor(m => m.Id)
    </div>

    <div class="form-group">
        <label asp-for="Name">Customer Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "e.g. Peter" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-actions">
        <button type="submit" class="btn-primary">Save Customer</button>
        <a asp-action="Index" class="btn-secondary">Cancel</a>
    </div>
</form>
